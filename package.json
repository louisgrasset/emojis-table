{
  "name": "emojis-table",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "node scripts/buildEmojiData.mjs",
    "dev:chromium": "BROWSER=chromium node scripts/buildManifest.mjs && vite",
    "dev:firefox": "BROWSER=firefox node scripts/buildManifest.mjs && vite",
    "predev": "mkdir -p ./dist && npm run inject:polyfill",
    "_build": "tsc && vite build",
    "build:chromium": "BROWSER=chromium node scripts/buildManifest.mjs && npm run _build",
    "build:firefox": "BROWSER=firefox node scripts/buildManifest.mjs && npm run _build",
    "postbuild": "npm run inject:polyfill",
    "preview": "vite preview",
    "inject:polyfill" : "cp ./node_modules/webextension-polyfill/dist/browser-polyfill.min.js ./dist/"
  },
  "dependencies": {
    "emojilib": "^3.0.8",
    "log-update": "^5.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "unicode-emoji-json": "^0.4.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.15",
    "@types/chrome": "^0.0.224",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "sass": "^1.59.3",
    "typescript": "^4.9.3",
    "vite": "^4.1.0"
  }
}
